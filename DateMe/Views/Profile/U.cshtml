@using DateMe.ViewModels
@model DateMe.ViewModels.ProfileViewModel

@{
    ViewBag.Title = @Model.Nickname + "'s profile";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="profile_bold">
            @Model.Nickname (@Model.Location.City, @Model.Location.Country)
        </h2>
        <h4>
            @Model.Age year old @Model.Gender.ToLower() looking for @Model.LookingFor
        </h4>

        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <img src="../../Content/Images/example_sexy.png" alt="@Model.Nickname's Profile Picture" id="profile_picture" />
    </div>

    <div class="col-md-9">
        <div class="row">
            <h4 class="profile_bold">Send a message to @Model.Nickname</h4>

            <form>
                <input value="@Model.Id" type="hidden" id="toUserId"/>
                <textarea class="form-control" id="message_text"></textarea>
                <button data-bind="click: sendMessage" type="submit" id="message_send" class="btn btn-sm">Send</button>
            </form>
            <p id="message_status"></p>
        </div>

        <hr/>

        <h4 class="profile_bold">Description</h4>

        <p id="profile_description">
            @Model.Description
        </p>

        <hr/>

        @{ Html.RenderPartial("~/Views/Shared/_Interests.cshtml");}
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="@Url.Content("~/Content/Css/profile.css")" />
}

@section Scripts {
    @Scripts.Render("~/bundles/knockout")
    <script src="/Scripts/Knockout/messageviewmodel.js"></script>
}















